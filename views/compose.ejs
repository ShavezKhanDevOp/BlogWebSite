<%- include('./partial/header'); -%>
<h1>Compose</h1>
<form action="/" method="POST">
    <div class="form-group">
        <label for="article">Title</label>
        <input type="text" class="form-control" name="title" id="articleText" placeholder="Title" required>        
    </div>
    <div class="form-group">
        <label for="post">Post</label>
        <textarea rows="6"class="form-control" name="post" required></textarea>       
    </div>
    <div class="form-group">
        <button type="submit" class="btn-primary button">Push Article</button>
    </div>
</form>
